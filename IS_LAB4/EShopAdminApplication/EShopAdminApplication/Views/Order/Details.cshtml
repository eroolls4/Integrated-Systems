@model EShopAdminApplication.Models.Order

<div class="container">
    <div>
        @if (Model != null && Model.Owner != null)
        {
            <p>Order for @Model.Owner.UserName</p>
        }
        else
        {
            <p>Order details not available</p>
        }
    </div>

    @if (Model != null && Model.ProductInOrders != null)
    {
        @for(int i = 0; i < Model.ProductInOrders.Count(); i++)
        {
            var productInOrder = Model.ProductInOrders.ElementAt(i);

            if (productInOrder != null && productInOrder.Product != null)
            {
                var item = productInOrder.Product;

                if(i % 3 == 0)
                {
                    @:<div class="row">
                }
                <div class="col-3 m-4">
                    <div class="card" style="width: 18rem; height: 35rem">
                        <img class="card-img-top" src="@item.ProductImage" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@item.ProductName</h5>
                            <p class="card-text">@item.ProductDescription</p>
                            <h6>Price: @item.Price</h6>
                        </div>
                    </div>
                </div>

                if(i % 3 == 2)
                {
                    @:</div>
                }
            }
            else
            {
                <p>Product details not available</p>
            }
        }
    }
    else
    {
        <p>No products in this order</p>
    }
</div>
