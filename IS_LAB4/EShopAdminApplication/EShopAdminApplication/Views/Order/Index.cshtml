@{
}
@model List<EShopAdminApplication.Models.Order>

<div class="container">
    <div class="row m-5">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Customer details
                    </th>
                    <th>
                        Number of products
                    </th>
                    <th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var item = Model[i];
                    if (item != null)  // Add this null check
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>
                                @if (item.Owner != null)
                                {
                                    @item.Owner.UserName
                                }
                                else
                                {
                                    <text>N/A</text>
                                }
                            </td>

                            <td>
                                @if (item.ProductInOrders != null)
                                {
                                    @item.ProductInOrders.Count()
                                }
                                else
                                {
                                    <text>N/A</text>
                                }
                            </td>
                            <td>
                                |
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">View Order</a>
                            </td>
                        </tr>
                    }
                }

            </tbody>

        </table>
    </div>
</div>