@model List<LAB1.Models.Concert>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center mb-4">
    <a class="btn btn-success" asp-action="Create">Create New Concert</a>

    <a class="btn btn-primary" asp-controller="Tickets" asp-action="Create">Buy Ticket</a>
</div>


<div class="container">
    @for (int i = 0; i < Model.Count; i += 3)
    {
        <div class="row">
            @for (int j = i; j < i + 3 && j < Model.Count; j++)
            {
                var item = Model[j];
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="@item.ConcertImage" class="card-img-top" style="height: 260px;" alt="Concert Image">
                        <div class="card-body">
                            <h5 class="card-title">@item.ConcertName</h5>
                            <p class="card-text">Place: @item.ConcertPlace</p>
                            <p class="card-text">Date: @item.ConcertDate.ToShortDateString()</p>
                            <p class="card-text">Price: @item.Price EUR</p>
                            <div class="btn-group" role="group" aria-label="Concert Actions">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

