@model List<AdminApplication.Models.Order>

<div class="container">
    <div class="row">
        <a asp-action="ExportOrders" class="btn btn-danger">Export All Orders</a>
    </div>

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Number of Products</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="4">No active orders</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        if (item != null)
                        {
                            var owner = item.Owner;

                            <tr>
                                <th scope="row">@(i + 1)</th>
                                <td>@(owner?.FirstName ?? "N/A")</td>
                                <td>@(item.ProductInOrders?.Count() ?? 0)</td>
                                <td>
                                    <a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-danger">Details</a>
                                    <a asp-action="CreateInvoice" asp-route-Id="@item.Id" class="btn btn-danger">Create Invoice</a>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
